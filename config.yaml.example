# Taenite build configuration template
# Fill values and save as config.yaml

# Basic Distribution Settings
distro_name: MyDistro
distro_version: 0.1
desktop_environment: openbox
display_manager: lightdm

# Localization and System Settings
timezone: UTC
locale: en_US.UTF-8
keyboard_layout: us
hostname_prefix: mydistro

# Features and Services
enable_autologin: true
enable_firewall: false
enable_ssh: false

# Boot Options
boot_quiet: true
boot_splash: true

# Custom Packages (list format)
packages:
  - vim
  - curl

# Additional Features
include_dev_tools: false
